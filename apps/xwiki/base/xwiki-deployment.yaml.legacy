apiVersion: apps/v1
kind: Deployment
metadata:
  name: xwiki
  labels:
    app: xwiki
    tier: app
    environment: recette
spec:
  replicas: 1
  selector:
    matchLabels:
      app: xwiki
  template:
    metadata:
      labels:
        app: xwiki
        tier: app
        environment: recette
    spec:
      containers:
        - name: xwiki
          image: xwiki:lts-mysql-tomcat
          imagePullPolicy: IfNotPresent
          ports:
            - containerPort: 8080
              name: http
          env:
            - name: DB_HOST
              value: mysql-xwiki   # nom de ton Service MySQL
            - name: DB_DATABASE
              value: xwiki
            - name: DB_USER
              valueFrom:
                secretKeyRef:
                  name: mysql-xwiki-secret
                  key: username
            - name: DB_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: mysql-xwiki-secret
                  key: password
          volumeMounts:
            - name: xwiki-data
              mountPath: /usr/local/xwiki/data
          readinessProbe:
            httpGet:
              path: /
              port: 8080
            initialDelaySeconds: 120
            periodSeconds: 20
            timeoutSeconds: 10
            failureThreshold: 12
          livenessProbe:
            httpGet:
              path: /
              port: 8080
            initialDelaySeconds: 100
            periodSeconds: 30
            timeoutSeconds: 10
            failureThreshold: 10

      volumes:
        - name: xwiki-data
          persistentVolumeClaim:
            claimName: xwiki-data
